<% if user_signed_in? %>
  <% if post.scare_user(current_user.id) %>
    <%= button_to post_scare_path(scare, post_id: post.id), method: :delete, class: "btn btn-warning" do %>
      <span>怖い!!! <%= post.scares_count %></span>
    <% end %>
  <% else %>
    <%= button_to post_scares_path(post), method: :post, class: "btn btn-warning" do %>
      <span>怖い <%= post.scares_count %></span>
    <% end %>
  <% end %>
<% else %>
  <button class="btn btn-warning" type="button" disabled>
    <span>怖い <%= post.scares_count %></span>
  </button>
<% end %>