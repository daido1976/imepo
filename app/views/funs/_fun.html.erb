<% if user_signed_in? %>
  <% if post.fun_user(current_user.id) %>
    <%= button_to post_fun_path(fun, post_id: post.id), method: :delete, class: "btn btn-success" do %>
      <span>おもしろい!!! <%= post.funs_count %></span>
    <% end %>
  <% else %>
    <%= button_to post_funs_path(post), method: :post, class: "btn btn-success" do %>
      <span>おもしろい <%= post.funs_count %></span>
    <% end %>
  <% end %>
<% else %>
  <button class="btn btn-success" type="button" disabled>
    <span>おもしろい <%= post.funs_count %></span>
  </button>
<% end %>
