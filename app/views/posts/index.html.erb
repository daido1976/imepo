<h1>TopPage</h1>
<section id="portfolio">
	<div class="container">
	<div class="row">
		<div class="col-lg-12 text-center">
			<div class="section-title">
				<h2>Portfolio</h2>
			</div>
		</div>
	</div>
	<div class="row row-0-gutter">
	  <% @posts.each do |post| %>
  		<div class="col-md-4 col-0-gutter">
  			<div class="ot-portfolio-item">
  				<figure class="effect-bubba">
  				  <%= image_tag post.image, class: "img-responsive center-block" %>
  					<figcaption>
  						<h2 style="text-transform:none;"><%= post.comment %> by <%= post.user.nickname %></h2>
  						<p>おもしろい <%= post.funs_count %> 怖い <%= post.scares_count %> 最悪 <%= post.worsts_count %></p>
  						<a href="#" data-toggle="modal" data-target="#Modal-<%= post.id %>">View more</a>
  					</figcaption>
  				</figure>
  			</div>
  		</div>
  	<% end %>

	<% @posts.each do |post| %>
		<div class="modal fade" id="Modal-<%= post.id %>" tabindex="-<%= post.id %>" role="dialog" aria-labelledby="Modal-label-<%= post.id %>">
			<div class="modal-dialog" role="document">
				<div class="modal-content">
					<div class="modal-header">
						<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
						<h4 class="modal-title" id="Modal-label-<%= post.id %>" style="text-transform:none;"><%= post.comment %> by <%= post.user.nickname %></h4>
						<%= link_to "edit", edit_post_path(post), class: "btn btn-info" %>
					</div>
					<div class="modal-body">
					  <%= image_tag post.image, class: "img-responsive center-block" %>
					</div>
					<div class="modal-footer">
					  <div class="form-inline text-center">
					    <div class="form-group"><%= render partial: "funs/fun", locals:{post: post, fun: post.funs } %></div>
					    <div class="form-group"><%= render partial: "scares/scare", locals:{post: post, scare: post.scares } %></div>
					    <div class="form-group"><%= render partial: "worsts/worst", locals:{post: post, worst: post.worsts } %></div>
					  </div>
						<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
					</div>
				</div>
			</div>
		</div>
 	<% end %>