<h2>New Post</h2>
<%= form_for @post do |f| %>
<%= render "shared/error_messages" %>
  <div class="form-group">
    <%= f.label :image %></br>
    <%= f.file_field :image, autofocus: true %>
  </div>
  <div class="form-group">
    <%= f.label :comment %></br>
    <%= f.text_field :comment %>
  </div>
  <div class="actions">
    <%= f.submit "Post" %>
  </div>
<% end %>