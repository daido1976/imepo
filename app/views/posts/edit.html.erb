<h2>Edit Status</h2>
<%= form_for @post do |f| %>
<%= render "shared/error_messages" %>
  <div class="form-group">
    <%= f.label :stock %></br>
    <%= f.number_field :stock, min: 0, autofocus: true %>
  </div>
  <div class="form-group">
    <%= f.label :price %></br>
    <%= f.number_field :price, min: 0 %>
  </div>
  <div class="actions">
    <%= f.submit "Post" %>
  </div>
<% end %>